<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">

        <item name="android:textColor">#f7ffff</item>
        <item name="android:textSize">20dp</item>

    </style>
    <style name="SpecialActionBar"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SpecialActionBarStyle</item>
        <item name="actionBarStyle">@style/SpecialActionBarStyle</item>
    </style>
    <style name="SpecialActionBarStyle"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="background">@color/colorPrimaryDark</item>
    </style>

</resources>